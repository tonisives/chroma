  "compilerOptions": {
    "target": "es2020",
    "module": "esnext",
    "sourceMap": true,
    "outDir": "./dist",
    "strict": true,
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "moduleResolution": "node",
  }
}